
#
import os
from os import system
import time
from time import sleep
import sys

weapon = False
jael = False


# Clearing the Screen
# os.system('clear')

def ossystemdelayclear():
    time.sleep(10)
    os.system('clear')


def ossystemdelayclear2():
    time.sleep(5)
    os.system('clear')


def scrollTxt(text):
    for char in text:
        sys.stdout.write(char)
        sys.stdout.flush()
        time.sleep(0.01)


def timer(text):
    for char in text:
        sys.stdout.write(char)
        sys.stdout.flush()
        time.sleep(1)


def timer2(text):
    for char in text:
        sys.stdout.write(char)
        sys.stdout.flush()
        time.sleep(0.5)


def timer3(text):
    for char in text:
        sys.stdout.write(char)
        sys.stdout.flush()
        time.sleep(0.25)


def scrollTxtfast(text):
    for char in text:
        sys.stdout.write(char)
        sys.stdout.flush()
        time.sleep(0.001)


black = "\033[0;30m"
purple = "\033[0;35m"
blue = "\033[0;34m"
green = "\033[0;32m"
red = "\033[0;31m"
yellow = "\033[0;33m"
white = "\033[0;37m"


def startingbedroom():
    print("")
    directions = ["closet", "exit the bedroom", "kitchen"]
    print(blue)
    scrollTxt("The game begins with you in your bedroom sitting in a office chair that is missing wheels.\n")
    print("")
    scrollTxt("You stand up from your office chair to meet your door dash driver at the door.\n")
    print("")
    scrollTxt("In this room you only have two choices. Where do you go?\n")
    print("")
    print(green)
    userInput = ""
    while userInput not in directions:
        print(green)
        scrollTxt("Options: closet/exit the bedroom")
        print("")
        print(white)
        userInputsb = input()
        if userInputsb == "closet":
            os.system('clear')
            print("")
            print("")
            print(red)
            scrollTxt("The closet isn't where your door dash delivery is.\n")
            scrollTxt("This is a beta move. You are beta\n")
            print("")
            scrollTxt("BTW, this is a picture of your closet.\n")
            scrollTxt("might need to reference this later...\n")
            print("")
            print(green)
            scrollTxt("https://imgur.com/WbWFLQ3")
            print("")
            print(red)
            scrollTxt("BTW, the text will disappear in 5 seconds so you better hurry and save it.\n")
            time.sleep(2)
            print("")
            timer("12345")
            os.system('clear')
            play()
        elif userInputsb == "exit the bedroom":
            firsthallway()
        else:
            print("Please enter a valid option.")


def firsthallway():
    os.system('clear')
    directions = ["First Bathroom", "second bedroom", "Great Room", "Backwards"]
    print("")
    print(blue)
    scrollTxt("You are standing in a small hallway with four directions you could choose.\n")
    time.sleep(0.05)
    print("")
    userInput = ""
    while userInput not in directions:
        print(green)
        print("Options: First Bathroom / second bedroom / Great Room / Backwards.")
        print("")
        print(white)
        userInput = input()
        if userInput == "First Bathroom":
            os.system('clear')
            print("")
            print(red)
            scrollTxt("The goal of this game isn't to go to the bathroom.\n")
            print("")
            scrollTxt("The goal is your doordash delivery.\n")
            print("")
            scrollTxt("BTW, this is a picture of your bathroom. You might need to reference this later...\n")
            print("")
            print(green)
            print("https://imgur.com/a/kLrq5FK")
            print("")
            print(red)
            timer("RESTART")
            os.system('clear')
            play()
        elif userInput == "second bedroom":
            secondbedroom()
        elif userInput == "Great Room":
            greatroom()
        elif userInput == "Backwards":
            startingbedroom2()
        else:
            print("Please enter a valid option.")
            timer("123")


def greatroom():
    os.system('clear')
    print("")
    print(blue)
    directions = ["Kitchen", "Foyer", "second Hallway", "Back to first hallway"]
    scrollTxt("Your house has an open concept between the Great Room the kitchen, and\n")
    scrollTxt("the Foyer. There are no walls separating them.\n")
    scrollTxt("The kitchen does have an prep island between it, the Great Room, and the Foyer.\n")
    scrollTxt("Next to the Foyer (where the front door is) is a wall with a door\n")
    scrollTxt("that leads to an additional part of your house.\n")
    scrollTxt("Currently, you are standing in the great room which is decorated like you\n")
    scrollTxt("are running a Goodwill Thrift store.\n")
    scrollTxt("While you know your food is just on the other side of the front door in the Foyer.\n")
    scrollTxt("Your beta brain is telling you that you might not have everything you need to retrieve the food yet.\n")
    print("")
    userInput = ""
    while userInput not in directions:
        print(green)
        print("Kitchen / Foyer / second Hallway / Back to first hallway")
        print("")
        print(white)
        userInput = input()
        if userInput == "Kitchen":
            kitchen()
        elif userInput == "Foyer":
            foyer()
