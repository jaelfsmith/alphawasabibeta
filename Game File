def wic():
    actions = ["fight", "talk"]
    os.system('clear')
    global weapon
    global jael
    print("")
    print(blue)
    scrollTxt("The walk in closet is quite spacious.\n")
    scrollTxt("And inside is a short mustached baby man holding a t-ball bat.\n")
    scrollTxt("He eyes you with suspicion. What do you do?\n")
    print("")
    userInput = ""
    while userInput not in actions:
        print("")
        print(green)
        print("Options: talk / fight")
        print("")
        print(white)
        userInput = input()
        if userInput == "talk":
            if weapon:
                print("")
                os.system('clear')
                print(blue)
                scrollTxt("You try talking to the mustached baby man. I just want my food, you say\n")
                scrollTxt("but I can't remember the code.\n")
                print(green)
                print("")
                scrollTxt("Beta move, the baby man says. You left clues for your smooth brain everywhere in the house.\n")
                scrollTxt("The first digit is the order placement of the second digit in each number found in each clue.\n")
                time.sleep(5)
                print(blue)
                print("")
                scrollTxt("Thank you mustached baby man. You say. Turning, you come out of the closet\n")
                scrollTxt("Realizing there is nothing to be afraid of in this house,\n")
                scrollTxt("you drop the knife on a table in the Master Bedroom\n")
                print("")
                weapon = False
                scrollTxt("Make sure you understand the code before you leave. Ten Count\n")
                timer("12345678910")
                masterbedroom()
            else:
                print("")
                os.system('clear')
                print(blue)
                scrollTxt("You try talking to the mustached baby man. I just want my food, you say\n")
                scrollTxt("but I can't remember the code.\n")
                print(green)
                print("")
                scrollTxt("Beta move, the baby man says. You left clues for your smooth brain everywhere in the house.\n")
                scrollTxt("The first digit is the order placement of the second digit in each number found in each clue.\n")
                time.sleep(5)
                print(blue)
                print("")
                scrollTxt("Thank you mustached baby man. You say. Turning, you come out of the closet\n")
                print("")
                scrollTxt("Make sure you understand the code before you leave. Ten Count\n")
                timer("12345678910")
                masterbedroom()
        elif userInput == "fight":
            if weapon:
                os.system('clear')
                print(green)
                scrollTxt("Without a moment of hesitation you run up and stab the mustached baby man in the neck.\n")
                time.sleep(1)
                print("")
                scrollTxt("As he is bleeding out and crumpling down to the floor. You hear him say,\n")
                time.sleep(2)
                print("")
                print(red)
                scrollTxt("Murder is beta.....\n")
                time.sleep(5)
                print("")
                print(green)
                scrollTxt("You turn, coming out of the closet leaving the mustached baby man\n")
                print("")
                scrollTxt("to decompose into yet another skeleton in your...closet\n")
                time.sleep(4)
                print("")
                timer2("YOU EXIT THE CLOSET")
                jael = True
                masterbedroom2()
            else:
                os.system('clear')
                print(red)
                scrollTxt("As you run up to fight him. You realize that you didn't keep the")
                print("")
                scrollTxt("knife from the kitchen. The mustached baby hits you in the knee with the bat.")
                print("")
                time.sleep(5)
                print("")
                scrollTxt("Then with rouge like acrobats, he cartwheels out of the closet laughing.")
                print("")
                scrollTxt("You hear him in the distance yelling that he knows the code to the door.")
                print("")
                time.sleep(5)
                print("")
                scrollTxt("The mustached baby man escapes into the world.")
                time.sleep(3)
                print("")
                print("")
                scrollTxt("To be clear, you could have stopped him as the bat to the knee wasn't that harmful.")
                print("")
                print("")
                time.sleep(3)
                scrollTxt("You were just to shocked to be bested by the mustached baby man that you froze.")
                print("")
                print("")
                timer3("GAME OVER MAN!!!!!")
                scrollTxtfast("""\

                         __       ___       _______  __                  
                        |  |     /   \     |   ____||  |                 
