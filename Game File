def greatroom2():
    directions = ["Kitchen", "Foyer", "second Hallway", "Back to first hallway"]
    os.system('clear')
    print(blue)
    scrollTxt("Wonderful. We're in the great room again....\n")
    print("")
    userInput = ""
    while userInput not in directions:
        print(green)
        print("Kitchen / Foyer / second Hallway / Back to first hallway")
        print(white)
        userInput = input()
        if userInput == "Kitchen":
            os.system('clear')
            print("")
            print(red)
            scrollTxt("You already spent too much time in the Kitchen not progressing the game.\n")
            scrollTxt("I'm restarting the game simply because I am frustrated with your beta-ness!\n")
            print("")
            timer("BETA")
            os.system('clear')
            play()
        elif userInput == "Foyer":
            foyer2()
        elif userInput == "second Hallway":
            secondhallway()
        elif userInput == "Back to first hallway":
            os.system('clear')
            print(red)
            print("")
            scrollTxt("If you are going backwards you might as well start from the beginning. Beta!\n")
            print("")
            timer("RESTART")
            play()
        else:
            print("Please enter a valid option.")


